<div class="row">
    <h1>
        New File/Download
    </h1>
    <%= render 'shared/errors', obj: @download %>
    <%= form_for @download do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :slug %>
            <%= f.text_field :slug %>
        </div>
        <div class="form-group">
            <%= f.label :downloads %>
            <%= f.file_field :downloads, multiple: true %>
        </div>
        <div class="form-group">
            <%= f.submit("Upload File", class: "btn btn-success") %>
        </div>
    <% end %>
</div>