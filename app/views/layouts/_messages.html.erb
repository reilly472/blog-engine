<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div id="flash-message" class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>