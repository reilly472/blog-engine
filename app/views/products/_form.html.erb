<div class="row">
    <h1>
        <%= title %>
    </h1>
    <%= render 'shared/errors', obj: @product %>
    <div>
        <%= form_for @product do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            
            <div class="form-group">
                <%= f.label :slug %>
                <%= f.text_field :slug, class: "form-control" %>
            </div>
            
            <div class='control-group'>
                <%= f.label "Downloads/Files" %>
                <%= f.collection_check_boxes :download_ids, Download.all, :id, :name do |cb| %>
                    <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
            </div>
            
            <div class="form-group">
                <%= f.submit((@product.new_record? ? 'Create Product' : 'Update Product'), class: "btn btn-success") %>
            </div>
        <% end %>
    </div>
</div>