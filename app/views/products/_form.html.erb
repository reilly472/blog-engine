<div class="row">
    <h1>
        <%= title %>
    </h1>
    <%= render 'shared/errors', obj: @product %>
    <div>
        <%= form_for @product do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit((@product.new_record? ? 'Create Product' : 'Update Product'), class: "btn btn-success") %>
            </div>
        <% end %>
    </div>
</div>